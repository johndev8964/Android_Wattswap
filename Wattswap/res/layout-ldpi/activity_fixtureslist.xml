      </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_topbar_tab"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp" >
            <TextView
                android:id="@+id/floor_TextView_fixtureList"
              style="@style/style_TextView"
                android:textSize="18sp"
                android:textColor="@color/openstate"
                
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/floor" />
           
            <View
            android:layout_width="1dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_vertical_line" />
          
            <TextView
                android:id="@+id/area_TextView_fixtureList"
                style="@style/style_TextView"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/openstate"
                android:singleLine="true"
                android:ellipsize="end"
               
                android:text="@string/area" />
           
            <TextView
                android:id="@+id/fixtures_TextView_fixtureList"
                style="@style/style_TextView"
                 android:textSize="18sp"
                android:textColor="@color/blue_top_bar"
                android:layout_marginLeft="60dp"
                android:text="@string/fixtures" />
        </LinearLayout>
        
        <View
            android:layout_width="150dp"
            android:layout_marginLeft="220dp"
            android:layout_height="4dp"
            android:background="@drawable/icon_blue_line" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/icon_blue_line" />
      <ListView
            android:id="@+id/fixturesListview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="#87CEEB"
            android:cacheColorHint="#00000000" >
