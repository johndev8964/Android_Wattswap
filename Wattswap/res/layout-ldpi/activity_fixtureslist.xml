          <ImageView
                android:id="@+id/plus"
                android:layout_width="30dp"
                 android:layout_marginTop="2dp"
                android:layout_height="30dp"
                android:src="@drawable/plus1"/>

          <ImageView
                android:id="@+id/dot"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_height="30dp"
                android:src="@drawable/dot"/>
