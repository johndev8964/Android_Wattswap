<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" 
    android:gravity="center_vertical">
    <ImageView 
        android:id="@+id/itemImageFixures"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"/>
    <LinearLayout android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView android:id="@+id/itemFixuresName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/openstate"/>
        <TextView android:id="@+id/itemFixuresDiscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/gray"
            android:textSize="12sp"/>
    </LinearLayout>
    
    <ViewFlipper 
          android:id="@+id/listViewFlipper"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="right">
        
    	      <TextView android:id="@+id/itemFixuresCount"
	            android:layout_width="50dp"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:singleLine="true"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="5dp"
	            android:drawablePadding="10dp"
	            android:textColor="@color/blue_top_bar"
	            android:textSize="18sp"
	            android:drawableRight="@drawable/icon_navigation_next"
	            />
        
    	      <ImageView
                  android:id="@+id/deleteButtonItem"
                  android:layout_width="70dp"
                  android:layout_height="wrap_content"
                  android:contentDescription="@string/app_name"
                  android:textColor="@color/white"
                  android:background="@drawable/icon_delete_with_text"/>
    	      
      </ViewFlipper>
      
</LinearLayout>