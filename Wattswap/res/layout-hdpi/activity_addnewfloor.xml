<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperant_black"
    android:orientation="vertical"
    android:paddingTop="60dp"
    android:weightSum="1" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.50"
        android:background="@color/white"
        android:paddingTop="80dp"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/lbl_floor_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/blue_top_bar"
            android:textSize="18sp"
            android:text="@string/lbl_floor_desc"/>
        <EditText 
            android:id="@+id/floorDescriptionTextView_AddFloor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:inputType="textCapSentences"
            android:background="@drawable/rectangle"
            android:textSize="18sp"/>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView 
                android:id="@+id/backTextView_AddFloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="22sp"
                android:textColor="@color/gray"
                android:text="@string/back"/>
            <TextView 
                android:id="@+id/saveTextView_AddFloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/openstate"
                android:textSize="22sp"
                android:layout_marginRight="50dp"
                android:text="@string/save"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.50"/>
</LinearLayout>