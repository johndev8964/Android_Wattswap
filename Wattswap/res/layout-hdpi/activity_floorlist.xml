<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue_top_bar"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="0dp" >

        <TextView
            android:id="@+id/home_TextView_FloorList"
            style="@style/style_wrap_content"
            android:text="@string/icon_home"
            android:textColor="#ffff"
            android:textSize="28sp" />

        <!-- <ImageView -->
        <!-- android:id="@+id/home_TextView_FloorList" -->
        <!-- android:layout_width="80dp" -->
        <!-- android:layout_height="80dp" -->
        <!-- android:layout_margin="0dp" -->
        <!-- android:contentDescription="@string/app_name" -->
        <!-- android:src="@drawable/home"/> -->

        <TextView
            android:id="@+id/title_TextView_FloorList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="19sp" />

<!--         <TextView -->
<!--             android:id="@+id/add_TextView_FloorList" -->
<!--             style="@style/style_wrap_content" -->
<!--             android:text="@string/icon_plus" -->
<!--             android:textColor="#ffff" -->
<!--             android:textSize="20sp" /> -->

<!--         <TextView -->
<!--             android:id="@+id/dot_TextView_FloorList" -->
<!--             style="@style/style_wrap_content" -->
<!--             android:layout_marginLeft="15dp" -->
<!--             android:text="@string/icon_dot" -->
<!--             android:textColor="#ffff" -->
<!--             android:textSize="20sp" /> -->
 <ImageView
                android:id="@+id/plus"
                android:layout_width="30dp"
                 android:layout_marginTop="2dp"
                android:layout_height="30dp"
                android:src="@drawable/plus1"/>

          <ImageView
                android:id="@+id/dot"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical|right"
                android:layout_height="30dp"
                android:src="@drawable/dot"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_topbar_tab"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/floor_TextView_FloorList"
            style="@style/style_TextView"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:singleLine="true"
             android:layout_gravity="center"
            android:text="@string/floor"
            android:textColor="@color/blue_top_bar"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/area_TextView_FloorList"
            style="@style/style_TextView"
            android:layout_marginLeft="20dp"
             android:layout_gravity="center"
            android:text="@string/area"
            android:textColor="@color/closestate"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fixtures_TextView_FloorList"
            style="@style/style_TextView"
            android:layout_marginLeft="40dp"
             android:layout_gravity="center"
            android:text="@string/fixtures"
            android:textColor="@color/closestate"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="110dp"
        android:layout_height="4dp"
        android:background="@drawable/icon_blue_line" />

    <ListView
        android:id="@+id/floor_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:listSelector="#87CEEB" >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/icon_blue_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_topbar_tab"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/delete_Survey_TextView"
            style="@style/style_wrap_content"
            android:text="@string/delete"
            android:textColor="@color/alart_major"
            android:textSize="24sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>