<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_top_bar"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="0dp" >

        <TextView
            android:id="@+id/home_TextView_AreaList"
            style="@style/style_wrap_content"
            android:text="@string/icon_home"
            android:textColor="#ffff"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/title_TextView_AreaList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="38sp" />
        <!-- <TextView android:id="@+id/add_TextView_AreaList" -->
        <!-- style="@style/style_wrap_content" -->
        <!-- android:textSize="40sp" -->
        <!-- android:textColor="#ffff" -->
        <!-- android:layout_marginRight="3dp" -->
        <!-- android:text="@string/icon_plus"/> -->
        <!-- <TextView android:id="@+id/dot_TextView_FloorList" -->
        <!-- style="@style/style_wrap_content" -->
        <!-- android:textSize="40sp" -->
        <!-- android:layout_marginLeft="30dp" -->
        <!-- android:textColor="#ffff" -->
        <!-- android:text="@string/icon_dot"/> -->

        <ImageView
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/plus1" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/dot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/icon_topbar_tab"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/floor_TextView_AreaList"
            style="@style/style_TextView"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/floor"
            android:textColor="@color/openstate"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/area_TextView_AreaList"
            style="@style/style_TextView"
            android:layout_marginLeft="60dp"
            android:text="@string/area"
            android:textColor="@color/blue_top_bar"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/fixtures_TextView_AreaList"
            style="@style/style_TextView"
            android:layout_marginLeft="60dp"
            android:text="@string/fixtures"
            android:textColor="@color/closestate"
            android:textSize="32sp" />
    </LinearLayout>

    <View
        android:layout_width="200dp"
        android:layout_height="6dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/icon_blue_line" />

    <ListView
        android:id="@+id/areaListview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:listSelector="#87CEEB" >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/icon_blue_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_topbar_tab"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            style="@style/style_wrap_content"
            android:text="@string/delete"
            android:textColor="@color/alart_major"
            android:textSize="40sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>